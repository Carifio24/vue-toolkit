{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "composite": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
